@{
    ViewData["Title"] = "Edit Period";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model OnlineHelpDesk.Models.Period
<section class="content-header">
    <h1>
        Edit Period
    </h1>
    <ol class="breadcrumb">
        <li><a asp-controller="dashboard" asp-action="index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Edit Period</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">

        <div class="col-md-12">
            @if (ViewBag.msg != null)
            {
                if (ViewBag.msg == "Done")
                {
                    <div class="callout callout-success">
                        <h1>Success</h1>
                    </div>
                }
                else
                {
                    <div class="callout callout-danger">
                        <h1>Failed</h1>
                    </div>
                }
            }
            <div class="box box-primary">
                <form asp-controller="period" asp-action="edit" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="username">Name</label>
                            <input type="text" class="form-control" id="username" required="required" asp-for="Name">
                        </div>

                        <div class="form-group">
                            <label>Color</label>

                            <select class="form-control" asp-for="Color">
                                <option value="success">Success</option>
                                <option value="warning">Warning</option>
                                <option value="danger">Danger</option>
                                <option value="info">Info</option>
                            </select>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="Status" /> Active
                            </label>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <input type="hidden" asp-for="Id" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>

